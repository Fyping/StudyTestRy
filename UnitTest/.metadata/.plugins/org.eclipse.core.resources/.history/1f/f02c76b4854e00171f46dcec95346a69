package cn.com.fangself.test;
/**
 * 张飞和李逵来买电影票，售票员只有两张5元的钱，张飞有一张20元的人民币，李逵有一张5元的，
 * 电影票5元一张
 * */
public class TicketHouse extends Thread {

	String officer = null;
	public TicketHouse(String officerName){
		this.officer = officerName;
	}
	public void run(){
		
		if(this.officer.equals("张飞")){
			System.out.println("没有零钱找"+"  先靠边等着");
			try {
				this.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}else if(this.officer.equals("李逵")){
			System.out.println("电影票给"+ this.officer);
			this.notifyAll();
		}
	}
	public static void main(String[] args) {
		
	}
}
